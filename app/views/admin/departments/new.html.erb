<!-- sidebar -->
<%= render 'admin/sidebar' %>

<!-- form -->

<div class="row">
  <div class="col-md-10 offset-md-2 mb-4">
    <div class="card">
      <h5 class="card-header">新規部署登録</h5>
      <div class="card-body">

        <!-- エラーメッセージ -->
        <% if @errors.present? %>
          <div class="alert alert-danger">
            <% @errors.each do |error| %>
              <p><%= error %></p>
            <% end %>
          </div>
        <% end %>

        <%= form_with(model: @department, url: {controller: 'admin/departments', action: 'create' }, local: true) do |form| %>
          <div class="form-group">
            <%= form.label :department_name, "部署名:" %>
            <%= form.text_field :department_name %>

            <%= form.submit "登録", class: "btn btn-sm btn-primary" %>
            <%= link_to '戻る', "/admin/departments/", class: 'btn btn-block btn-danger' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>