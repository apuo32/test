<!-- sidebar -->
<%= render 'admin/sidebar' %>

<!-- form -->

<div class="row">
  <div class="col-md-10 offset-md-2 mb-4">
    <div class="card">
      <h5 class="card-header">新規ユーザー登録</h5>
      <div class="card-body">
        <%= form_with(model: @department, url: admin_departments_path, local: true) do |form| %>
          <div class="form-group">
            <%= form.label :department_name, "部署名:" %>
            <%= form.text_field :department_name %>
          </div>
        <% end %>

        <a href="#" class="btn btn-block btn-light">作成</a>
      </div>
    </div>
  </div>
</div>
