<!-- sidebar -->
<%= render 'admin/sidebar' %>

<!-- form -->

<div class="row">
  <div class="col-md-10 offset-md-2 mb-4">
    <div class="card">
      <h5 class="card-header">部署編集</h5>
      <div class="card-body">
        <%= form_with(model: @department, url: {controller: 'admin/departments', action: 'update' }, local: true) do |form| %>
          <div class="form-group">
            <%= form.label :department_name, "部署名:" %>
            <%= form.text_field :department_name %>

            <%= form.label :deletion_flag, "削除フラグ:" %>
            <%= form.check_box :deletion_flag, {}, "true", "false" %>

            <%= form.submit "登録", class: "btn btn-sm btn-primary" %>
            <a href="/admin/departments/" class="btn btn-sm btn-danger">戻る</a>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
