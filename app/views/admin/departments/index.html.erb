<!-- sidebar -->
<%= render 'admin/sidebar' %>

<!-- table -->

<div class="row">
  <div class="col-md-10 offset-md-2 mb-4">
    <div class="card">
      <h5 class="card-header">部署登録</h5>
      <div class="card-body">
      <%= link_to '新規作成', "/admin/departments/new", class: 'btn btn-block btn-secondary' %>
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">部署名</th>
                <th scope="col">作成日時</th>
                <th scope="col">更新日時</th>
                <th scope="col">削除フラグ</th>
              </tr>
            </thead>
            <tbody>
              <% @departments.each do |i| %>
                <tr>
                  <th scope="row"><%= i.id %></th> 
                  <td><%= i.department_name %></td>
                  <td><%= i.created_at.strftime('%Y/%m/%d') %></td>
                  <td><%= i.updated_at.strftime('%Y/%m/%d') %></td>
                  <td><%= i.deletion_flag %></td>
                  <td><%= link_to '編集', "/admin/departments/#{i.id}/edit", class: 'btn btn-sm btn-primary' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
