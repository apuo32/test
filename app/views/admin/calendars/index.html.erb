<!-- sidebar -->
<%= render 'admin/sidebar' %>

<!-- table -->

<div class="row">
  <div class="col-md-10 offset-md-2 mb-4">
    <div class="card">
      <h5 class="card-header">カレンダー作成</h5>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">期</th>
                <th scope="col">回</th>
                <th scope="col">1次提出年月日</th>
                <th scope="col">2次提出年月日</th>
                <th scope="col">表彰年月日</th>
              </tr>
            </thead>
            <tbody>
              <% @calendars.each do |calendar| %>
                <tr>
                  <th scope="row"><%= calendar.term %></th>
                  <td><%= calendar.time %></td>
                  <td><%= calendar.first_evaluation_submission_date.strftime('%Y/%m/%d') %></td>
                  <td><%= calendar.second_evaluation_submission_date.strftime('%Y/%m/%d') %></td>
                  <td><%= calendar.award_date.strftime('%Y/%m/%d') %></td>
                  <td><%= link_to '編集', edit_admin_calendar_path(calendar), class: 'btn btn-sm btn-primary' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <a href="/admin/calendars/new" class="btn btn-block btn-secondary">新規作成</a>
      </div>
    </div>
  </div>
</div>
