<!-- sidebar -->
<%= render 'admin/sidebar' %>

<!-- table -->

<div class="row">
  <div class="col-md-10 offset-md-2 mb-4">
    <div class="card">
      <h5 class="card-header">ユーザー登録</h5>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">ユーザー名</th>
                <th scope="col">社員CD</th>
                <th scope="col">部署名</th>
                <th scope="col">評価者区分</th>
                <th scope="col">1次評価者ユーザー名</th>
                <th scope="col">2次評価者ユーザー名</th>
                <th scope="col">システム管理者フラグ</th>
                <th scope="col">作成日時</th>
                <th scope="col">更新日時</th>
                <th scope="col">削除フラグ</th>
                <th scope="col">削除日時</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <th scope="row"><%= user.id %></th>
                  <td><%= user.username %></td>
                  <td><%= user.employee_code %></td>
                  <td><%= user.department.department_name %></td>
                  <td><%= user.evaluator.status %></td>
                  <td><%= user.first_evaluator_id %></td>
                  <td><%= user.second_evaluator_id %></td>
                  <td><%= user.admin_flag %></td>
                  <td><%= user.created_at.strftime('%Y/%m/%d') %></td>
                  <td><%= user.updated_at.strftime('%Y/%m/%d') %></td>
                  <td><%= user.deletion_flag %></td>
                  <td><%= user.deletion_date ? user.deletion_date.strftime('%Y/%m/%d') : '-' %></td>
                  <td><%= link_to '編集', edit_admin_user_path(user), class: 'btn btn-sm btn-primary' %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
          <a href="/admin/users/new" class="btn btn-block btn-secondary">新規作成</a>
      </div>
    </div>
  </div>
</div>
