            <%= hidden_field_tag "selected_kaizen_reports[]", nil %>
          </div>
        </div>
      </div>
      <div>
        <!-- ページネーション:改善一覧テーブル -->
        <%= paginate @first_evaluation_kaizen_reports_result, theme: 'bootstrap-5' %>
      </div>
    </div>
  <% end %>
<% end %>


